#!/bin/bash

scriptdir="$(dirname ${BASH_SOURCE[0]})"
cd "$scriptdir" || exit 1
scriptdir="$PWD"

if [ -f "$scriptdir/hy_edge_blend_common" ] ; then
    # running from the source directory
    source "$scriptdir/hy_edge_blend_common"
else
    # after it's installed in BIN
    source "@BIN@/hy_edge_blend_common"
fi


# blend_on DISPLAY GRAPHIC_NUM BOTTOM|TOP
blend_on :2.0 2 -b
blend_on :2.1 4 -b
blend_on :2.2 6 -t
blend_on :2.3 8 -t

blend_on :2.4 12 -b
blend_on :2.5 14 -b
blend_on :2.6 16 -t
blend_on :2.7 18 -t

blend_on :2.8 22 -b
blend_on :2.9 24 -b
blend_on :2.10 26 -t
blend_on :2.11 28 -t

blend_on :2.12 32 -b
blend_on :2.13 34 -b
blend_on :2.14 36 -t
blend_on :2.15 38 -t

